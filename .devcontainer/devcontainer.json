{
  "image": "ghcr.io/qwrtln/homm3bg:latest",
  "customizations": {
    "vscode": {
      "extensions": [
        "streetsidesoftware.code-spell-checker",
        "mrorz.language-gettext",
        "James-Yu.latex-workshop"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "/bin/bash"
          }
        }
      }
    }
  },
  "containerEnv": {
    "SHELL": "/bin/bash"
  }
}
