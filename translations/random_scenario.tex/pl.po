#. type: multicols
#: sections/random_scenario.tex:302
#, no-wrap
msgid ""
"\\textbf{\\nth{1} Round:}\n"
"\\begin{itemize}\n"
"  \\item All Heroes gain +1 \\svg{movement}.\n"
"\\end{itemize}\n"
"\\textbf{\\nth{6} and \\nth{9} Rounds:}\n"
"\\begin{itemize}\n"
"  \\item Remove all Black Cubes from every Water Wheel and Windmill on the map.\n"
"\\end{itemize}\n"
"\\textbf{\\nth{10} Round:}\n"
"\\begin{itemize}\n"
"  \\item Player(s) whose Main Hero has the least experience roll 2 \\svg{resource}.\n"
"\\end{itemize}\n"
"\\textbf{\\nth{12} Round:}\n"
"\\begin{itemize}\n"
"  \\item Repeat event of Round 6.\n"
"\\end{itemize}\n"
"\n"
msgstr ""
"\\textbf{1. Runda:}\n"
"\\begin{itemize}\n"
"  \\item Wszyscy Bohaterowie otrzymują +1 \\svg{movement}.\n"
"\\end{itemize}\n"
"\\textbf{6. i 9. Rundy:}\n"
"\\begin{itemize}\n"
"  \\item Usuń wszystkie Czarne Kostki z każdego Młyna Wodnego i Wiatraka na mapie.\n"
"\\end{itemize}\n"
"\\textbf{10. Runda:}\n"
"\\begin{itemize}\n"
"  \\item Gracz(e), których Bohater Główny ma najmniej doświadczenia, rzucają 2 \\svg{resource}.\n"
"\\end{itemize}\n"
"\\textbf{12. Runda:}\n"
"\\begin{itemize}\n"
"  \\item Powtórz wydarzenie z 6. Rundy.\n"
"\\end{itemize}\n"
"\n"

#. type: multicols
